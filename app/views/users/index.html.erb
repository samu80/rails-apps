<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
       

      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        
        <td><%= user.age %></td>
        <td><%= link_to "Edit User", edit_user_path(user) %></td>

        <td><%= button_to "Delete User", user_path(user), method: "delete", data: { confirm: "Want to delete?" } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New User", new_user_path %>
